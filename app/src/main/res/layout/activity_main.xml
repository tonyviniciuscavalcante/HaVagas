<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nome Completo -->
        <EditText
            android:id="@+id/nomeCompletoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nome_completo"
            android:inputType="textPersonName" />

        <!-- E-mail -->
        <EditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress" />

        <!-- Receber Atualizações -->
        <CheckBox
            android:id="@+id/receberEmailCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deseja_receber_atualiza_es_por_e_mail" />

        <!-- Telefone -->
        <EditText
            android:id="@+id/telefoneEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/telefone"
            android:inputType="phone" />

        <!-- Tipo de Telefone -->
        <RadioGroup
            android:id="@+id/tipoTelefoneRg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/comercialRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comercial" />

            <RadioButton
                android:id="@+id/residencialRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/residencial" />
        </RadioGroup>

        <!-- Adicionar Telefone Celular -->
        <CheckBox
            android:id="@+id/adicionarCelularCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adicionar_telefone_celular" />

        <!-- Telefone Celular -->
        <EditText
            android:id="@+id/celularEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/telefone_celular"
            android:inputType="phone"
            android:visibility="gone" />

        <!-- Sexo -->
        <RadioGroup
            android:id="@+id/sexoRg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/masculinoRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/masculino" />

            <RadioButton
                android:id="@+id/femininoRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feminino" />

            <RadioButton
                android:id="@+id/outroRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/outro" />
        </RadioGroup>

        <!-- Data de Nascimento -->
        <EditText
            android:id="@+id/dataNascimentoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/data_de_nascimento"
            android:inputType="date" />

        <!-- Formação -->
        <Spinner
            android:id="@+id/formacaoSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/formacao_array" />

        <!-- Campos adicionais da Formação (Invisíveis por padrão) -->
        <EditText
            android:id="@+id/anoFormaturaEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ano_de_formatura"
            android:inputType="number"
            android:visibility="gone" />

        <EditText
            android:id="@+id/instituicaoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/institui_o"
            android:inputType="text"
            android:visibility="gone" />

        <EditText
            android:id="@+id/tituloMonografiaEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/t_tulo_da_monografia"
            android:inputType="text"
            android:visibility="gone" />

        <EditText
            android:id="@+id/orientadorEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/orientador"
            android:inputType="text"
            android:visibility="gone" />

        <!-- Vagas de Interesse -->
        <EditText
            android:id="@+id/vagasInteresseEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/vagas_de_interesse"
            android:inputType="textMultiLine" />

        <!-- Botões de Salvar e Limpar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/salvarBt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/salvar" />

            <Button
                android:id="@+id/limparBt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/limpar" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
